{
    // "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "Ninja",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "Ninja Multi-Config",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "Visual Studio",
            "hidden": true,
            "architecture": {
                "strategy": "external",
                "value": "x64"
            },
            "toolset": {
                "strategy": "external",
                "value": "v143,host=x64"
            }
        },
        {
            "name": "MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "LLVM",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "Unity",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Glow Testing",
            "hidden": true,
            "cacheVariables": {
                "GLOW_BUILD_TESTING": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Glow Examples",
            "hidden": true,
            "cacheVariables": {
                "GLOW_BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Glow Tools",
            "hidden": true,
            "cacheVariables": {
                "GLOW_BUILD_TOOLS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Default",
            "inherits": ["Ninja Multi-Config", "Visual Studio", "MSVC"],
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "CI",
            "inherits": ["Ninja Multi-Config", "Visual Studio", "MSVC", "Glow Testing"],
            "binaryDir": "${sourceDir}/build"
        }
    ],
    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "Default",
            "configuration": "Release"
        },
        {
            "name": "Debug",
            "configurePreset": "Default",
            "configuration": "Debug"
        },
        {
            "name": "CI",
            "configurePreset": "CI",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "Release",
            "configurePreset": "Default",
            "configuration": "Release"
        },
        {
            "name": "Debug",
            "configurePreset": "Default",
            "configuration": "Debug"
        },
        {
            "name": "CI",
            "configurePreset": "CI",
            "configuration": "Release"
        }
    ]
}
