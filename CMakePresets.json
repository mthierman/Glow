{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 30,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "MSBuild",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "strategy": "set",
                "value": "x64"
            },
            "toolset": {
                "strategy": "set",
                "value": "v143,host=x64"
            },
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "Ninja",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "architecture": {
                "strategy": "external",
                "value": "x64"
            },
            "toolset": {
                "strategy": "external",
                "value": "v143,host=x64"
            },
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "Clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "Unity",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Examples",
            "hidden": true,
            "cacheVariables": {
                "BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "MSBuild MSVC",
            "inherits": ["MSBuild", "MSVC", "Examples"]
        },
        {
            "name": "MSBuild Clang",
            "inherits": ["MSBuild", "Clang", "Examples"]
        },
        {
            "name": "Ninja MSVC",
            "inherits": ["Ninja", "MSVC", "Examples"]
        },
        {
            "name": "Ninja Clang",
            "inherits": ["Ninja", "Clang", "Examples"]
        }
    ],
    "buildPresets": [
        {
            "name": "MSBuild",
            "hidden": true,
            "nativeToolOptions": [
                "/p:UseMultiToolTask=true",
                "/p:EnforceProcessCountAcrossBuilds=true"
            ]
        },
        {
            "name": "Debug",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "MSBuild MSVC",
            "hidden": true,
            "inherits": ["MSBuild"],
            "configurePreset": "MSBuild MSVC"
        },
        {
            "name": "MSBuild Clang",
            "hidden": true,
            "inherits": ["MSBuild"],
            "configurePreset": "MSBuild Clang"
        },
        {
            "name": "Ninja MSVC",
            "hidden": true,
            "configurePreset": "Ninja MSVC"
        },
        {
            "name": "Ninja Clang",
            "hidden": true,
            "configurePreset": "Ninja Clang"
        },
        {
            "name": "MSBuild MSVC Debug",
            "inherits": ["MSBuild MSVC", "Debug"]
        },
        {
            "name": "MSBuild MSVC Release",
            "inherits": ["MSBuild MSVC", "Release"]
        },
        {
            "name": "MSBuild Clang Debug",
            "inherits": ["MSBuild Clang", "Debug"]
        },
        {
            "name": "MSBuild Clang Release",
            "inherits": ["MSBuild Clang", "Release"]
        },
        {
            "name": "Ninja MSVC Debug",
            "inherits": ["Ninja MSVC", "Debug"]
        },
        {
            "name": "Ninja MSVC Release",
            "inherits": ["Ninja MSVC", "Release"]
        },
        {
            "name": "Ninja Clang Debug",
            "inherits": ["Ninja Clang", "Debug"]
        },
        {
            "name": "Ninja Clang Release",
            "inherits": ["Ninja Clang", "Release"]
        }
    ],
    "testPresets": [
        {
            "name": "Debug",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "hidden": true,
            "configuration": "Debug"
        }
    ]
}
