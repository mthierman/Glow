{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "Ninja Multi-Config",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "Unity",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "MSVC",
            "hidden": true,
            "architecture": {
                "strategy": "external",
                "value": "x64"
            },
            "toolset": {
                "strategy": "external",
                "value": "v143,host=x64"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "LLVM",
            "hidden": true,
            "architecture": {
                "strategy": "external",
                "value": "x64"
            },
            "toolset": {
                "strategy": "external",
                "value": "v143,host=x64"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "Multi MSVC",
            "inherits": ["Ninja Multi-Config", "MSVC"]
        },
        {
            "name": "Multi LLVM",
            "inherits": ["Ninja Multi-Config", "LLVM"]
        },
        {
            "name": "Unity MSVC",
            "inherits": ["Ninja Multi-Config", "MSVC", "Unity"]
        },
        {
            "name": "Unity LLVM",
            "inherits": ["Ninja Multi-Config", "MSVC", "Unity"]
        }
    ],
    "buildPresets": [
        {
            "name": "Release",
            "configurePreset": "Multi MSVC",
            "configuration": "Release"
        },
        {
            "name": "Release",
            "configurePreset": "Multi LLVM",
            "configuration": "Release"
        },
        {
            "name": "Release",
            "configurePreset": "Unity MSVC",
            "configuration": "Release"
        },
        {
            "name": "Release",
            "configurePreset": "Unity LLVM",
            "configuration": "Release"
        },
        {
            "name": "Debug",
            "configurePreset": "Multi MSVC",
            "configuration": "Debug"
        },
        {
            "name": "Debug",
            "configurePreset": "Multi LLVM",
            "configuration": "Debug"
        },
        {
            "name": "Debug",
            "configurePreset": "Unity MSVC",
            "configuration": "Debug"
        },
        {
            "name": "Debug",
            "configurePreset": "Unity LLVM",
            "configuration": "Debug"
        }
    ]
}
