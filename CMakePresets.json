{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 0
    },
    "include": ["libs/cmake-modules/CMakePresets.json"],
    "configurePresets": [
        {
            "name": "Glow Examples",
            "hidden": true,
            "cacheVariables": {
                "GLOW_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Development",
            "inherits": ["Ninja Multi-Config", "Compiler: MSVC", "Glow Tests", "Glow Examples"]
        },
        {
            "name": "CI",
            "inherits": ["Ninja Multi-Config", "Compiler: MSVC", "Glow Tests"]
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "Development",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "Development",
            "configuration": "Release"
        },
        {
            "name": "CI",
            "configurePreset": "CI",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "Debug",
            "configurePreset": "Development",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "Development",
            "configuration": "Release"
        },
        {
            "name": "CI",
            "configurePreset": "CI",
            "configuration": "Release"
        }
    ]
}
