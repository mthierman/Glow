{
    "$schema": "https://raw.githubusercontent.com/Kitware/CMake/master/Help/manual/presets/schema.json",
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 28,
        "patch": 0
    },
    "include": [],
    "configurePresets": [
        {
            "name": "Visual Studio Generator",
            "hidden": true,
            "generator": "Visual Studio 17 2022"
        },
        {
            "name": "Ninja Generator",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "Ninja Multi-Config Generator",
            "hidden": true,
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "Architecture",
            "hidden": true,
            "architecture": {
                "strategy": "external",
                "value": "x64"
            }
        },
        {
            "name": "Toolset",
            "hidden": true,
            "toolset": {
                "strategy": "external",
                "value": "v143,host=x64"
            }
        },
        {
            "name": "MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "LLVM",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "Unity Build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_UNITY_BUILD": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Glow Testing",
            "hidden": true,
            "cacheVariables": {
                "GLOW_BUILD_TESTING": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Glow Examples",
            "hidden": true,
            "cacheVariables": {
                "GLOW_BUILD_EXAMPLES": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Glow Tools",
            "hidden": true,
            "cacheVariables": {
                "GLOW_BUILD_TOOLS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "Visual Studio",
            "hidden": true,
            "inherits": ["Visual Studio Generator", "Architecture", "Toolset", "MSVC"],
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "Ninja Multi-Config",
            "hidden": true,
            "inherits": ["Ninja Multi-Config Generator", "Architecture", "Toolset", "MSVC"],
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "CI",
            "inherits": ["Ninja Multi-Config", "Glow Testing"]
        },
        {
            "name": "Dev",
            "inherits": ["Ninja Multi-Config", "Glow Testing", "Glow Examples", "Glow Tools"],
            "cacheVariables": {
                "CMAKE_PROJECT_Glow_INCLUDE_BEFORE": "${sourceDir}/cmake/Packages.cmake",
                "GLOW_RESTORE_NUGET": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "MSBuild",
            "hidden": true,
            "nativeToolOptions": [
                "/p:UseMultiToolTask=true",
                "/p:EnforceProcessCountAcrossBuilds=true"
            ]
        },
        {
            "name": "CI",
            "configurePreset": "CI",
            "configuration": "Release"
        },
        {
            "name": "Dev",
            "configurePreset": "Dev",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "CI",
            "configurePreset": "CI",
            "configuration": "Release"
        },
        {
            "name": "Dev",
            "configurePreset": "Dev",
            "configuration": "Debug"
        }
    ]
}
